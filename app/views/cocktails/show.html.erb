<div class="cocktail-banner" style="background-image: linear-gradient(-225deg, rgba(0,101,168,0.6) 0%, rgba(0,36,61,0.6) 50%), url('http://www.stephensons.com/img/cms/cocktail%20banner.jpg'); background-size: cover;">
  <h1><strong><%= @cocktail.name %></strong></h1>
</div>

<div>&nbsp;</div>

<div class="container">
  <div class="row">
    <div class="col-sm-4">
      <div class="box">
        <%= cl_image_tag @cocktail.photo, crop: :fill , class: 'cocktail-pic'%>
      </div>
    </div>
    <div class="col-sm-4">
      <div class="box">
        <div id="doses" class="doses">
          <h3>Dosage</h3>
          <% if @cocktail.doses.empty? %>
            <p>Be the first to write the dosage for <%= @cocktail.name %>!</p>
          <% else %>
            <% @cocktail.doses.each do |dose| %>
              <div class="dose">
                <%= render 'doses/show', dose: dose , class: "dose-description"%>
              </div>
            <% end %>
          <% end %>
        </div>
      </div>
    </div>
    <div class="col-sm-4">
      <div class="box">
        <div class="new-dose" id="dose-form">
          <h4>Create a new dose</h4>
          <%= render 'doses/form', cocktail: @cocktail, dose: @dose %>
        </div>

        <hr>

        <div class="cocktail-options">
          <p><i class="fas fa-trash-alt"></i>&nbsp;&nbsp;<%= link_to 'Delete this cocktail', cocktail_path, method: :delete %></p>
          <p><i class="fas fa-caret-square-left"></i>&nbsp;&nbsp;<%= link_to 'Back to cocktails', root_path %></p>
        </div>
      </div>
    </div>
  </div>
</div>
