<div>&nbsp;</div>

<div class="container">
  <div class="row">
    <div class="col-sm-6">
      <%= cl_image_tag @cocktail.photo, height: 350, width: 350, crop: :fill , class: 'cocktail-pic'%>
    </div>
    <div class="col-sm-6">
      <div class="box">
        <h1><%= @cocktail.name %></strong></h1>

        <div class="dose-list">
          <h3>Dosage</h3>
          <ul>
            <% @cocktail.doses.each do |dose| %>
              <li><%= dose.description %></li>
            <% end %>
          </ul>
        </div>

        <div class="new-dose">
          <%= render("doses/form", cocktail: @cocktail, dose: @dose) %>
        </div>

        <div class="cocktail-options">
          <%= link_to 'Delete this cocktail', cocktail_path, method: :delete %><br>
          <%= link_to 'Back to cocktails', cocktails_path %>
        </div>

      </div>
    </div>
  </div>
</div>
